.game-messages
  .game-message

    .row.message-header
      padding-bottom 0

    .row.slim
      padding-top 0
      padding-bottom 0

      .column
        margin-top .5rem !important
        margin-bottom .5rem  !important

    .character-name, .user-name
      font-size 24px
      font-weight bolder

    .character-name
      padding-bottom 2px

    .secondary-attributes
      .attribute
        display inline-block
        margin-right 8px

        &:after
          content: "\007C"
          margin-left 8px

        &:last-child
          &:after
            content: ""
            margin-left 0

    .column-info
      font-size 10px
      font-style italic
      color silver - 20%

    .out-character
      .column-message, .user-name
        color silver - 10%
      .row.header-row
        .column
          margin-bottom 0 !important
