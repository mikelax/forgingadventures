.game-messages
  .game-message

    .row.message-header
      padding-bottom 0

    .row.slim
      padding-top 0
      padding-bottom 0

      &:before
        height 0 !important
        box-shadow none !important

      .column
        margin-top .5rem !important
        margin-bottom .5rem  !important

    .character-name, .user-name
      font-size 24px
      font-weight bolder

    .secondary-attributes
      .attribute
        display inline-block
        margin-right 8px

        &:after
          content: "\007C"
          margin-left 8px

        &:last-child
          &:after
            content: ""
            margin-left 0

