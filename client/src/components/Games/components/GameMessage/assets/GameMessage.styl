.GameMessage
  padding 5px

  &.editing
    border 1px solid #ddd
    border-radius 2px
    min-height 150px

    .editor-container
      padding 5px

  .editor-container

    blockquote
      border-left 5px solid #4ca8de + 50%
      color #555
      margin 0
      padding 0 0 0 20px
      background-color #e8f3ff + 50%

  .editor-controls
    padding-bottom 5px
    border-bottom 1px solid #ddd

    .ui.buttons
      vertical-align top

      button
        .super-mini
          opacity 0.6
          width 14px

  span.shouting
    color blue
    font-weight bold


  span.thinking
    color silver
    font-style italic


  span.singing
    color green
    font-style italic
    font-weight bold


  span.singing
    img
      width 12px
      height 12px
      margin-left 3px
      margin-right 3px
