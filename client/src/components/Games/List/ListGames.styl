$padding = 5px

.ListGames
  .game-container
    display flex
    padding-top 20px

    .game-card
      flex-basis 30%
      min-height 400px
      border 1px solid silver + 20%
      border-radius 3px
      background-color silver + 80%
      box-shadow 1px 1px 5px 0px rgba(0,0,0,0.75)

      .header, .details
        display flex
        flex-direction column

      .header
        flex 1
        justify-content center
        background-color silver - 20%

        .title
          padding $padding
          font-size 20px

          a
            color white
            text-decoration none

      .details
        flex 3
        .scenario, .overview, .settings
          flex 1


